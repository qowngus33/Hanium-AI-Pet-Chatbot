<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pic"
        android:layout_width="163dp"
        android:layout_height="155dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/cat" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:stretchColumns="*">
        <TableRow android:layout_marginTop="5dp">
            <TextView
                android:text=""
                android:textSize="20dp"
                android:layout_column="0"
                android:layout_gravity="center"/>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/DogOrCat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/materialTv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:singleSelection="true"
                app:selectionRequired="true"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/selectDog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개"
                    android:textSize="18dp"
                    style="?attr/materialButtonStyle"
                    />
                <Button
                    android:id="@+id/selectCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="고양이"
                    android:textSize="18dp"
                    style="?attr/materialButtonOutlinedStyle"
                    />
            </com.google.android.material.button.MaterialButtonToggleGroup>
        </TableRow>
        <TableRow>
            <TextView
                android:text="이름:"
                android:textSize="20dp"
                android:layout_column="0"
                android:layout_gravity="center"/>
            <TextView
                android:text=""
                android:textSize="20dp"
                android:id="@+id/petNickname"
                android:layout_column="1"
                android:layout_gravity="center"/>
            <Button
                android:text="입력"
                android:textSize="20dp"
                android:id="@+id/btnName"
                android:layout_column="2"
                android:layout_gravity="center"/>
        </TableRow>
        <TableRow android:layout_marginTop="5dp">
            <TextView
                android:text="나이:"
                android:textSize="20dp"
                android:layout_column="0"
                android:layout_gravity="center"/>
            <TextView
                android:text=""
                android:textSize="20dp"
                android:id="@+id/petAge"
                android:layout_column="1"
                android:layout_gravity="center"/>
            <Button
                android:text="입력"
                android:textSize="20dp"
                android:id="@+id/btnAge"
                android:layout_column="2"
                android:layout_gravity="center"/>
        </TableRow>
        <TableRow android:layout_marginTop="5dp">
            <TextView
                android:text="성별:"
                android:textSize="20dp"
                android:layout_column="0"
                android:layout_gravity="center"/>
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/Gendertoggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/materialTv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:singleSelection="true"
                app:selectionRequired="true"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남"
                    android:textSize="18dp"
                    style="?attr/materialButtonOutlinedStyle"
                    />
                <Button
                    android:id="@+id/woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여"
                    android:textSize="18dp"
                    style="?attr/materialButtonOutlinedStyle"
                    />
            </com.google.android.material.button.MaterialButtonToggleGroup>
        </TableRow>
        <TableRow android:layout_marginTop="5dp">
            <TextView
                android:text="중성화:"
                android:textSize="20dp"
                android:layout_column="0"
                android:layout_gravity="center"/>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/Neuteringtoggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/materialTv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:singleSelection="true"
                app:selectionRequired="true"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/Neuteringyes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O"
                    android:textSize="18dp"
                    style="?attr/materialButtonOutlinedStyle"
                    />
                <Button
                    android:id="@+id/Neuteringno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textSize="18dp"
                    style="?attr/materialButtonOutlinedStyle"
                    />
            </com.google.android.material.button.MaterialButtonToggleGroup>
        </TableRow>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center">
            <Button
                android:text="저장"
                android:textSize="20dp"
                android:id="@+id/btnAddPetSave"
                android:layout_toLeftOf="@id/btnAddPetCancel"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"/>

            <Button
                android:text="취소"
                android:textSize="20dp"
                android:id="@+id/btnAddPetCancel"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </TableLayout>

</LinearLayout>